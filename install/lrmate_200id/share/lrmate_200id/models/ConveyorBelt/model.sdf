<?xml version="1.0" ?>
<sdf version="1.7">
    <model name="ConveyorBelt">

        <!-- 原本履帶表面 -->
        <link name="belt_surface">
            <pose>0 0 0.04 0 0 0</pose> <!-- 將履帶整體抬高，讓滾筒不會落到地面下 -->
            <inertial>
                <mass>1.0</mass>
                <inertia>
                    <ixx>0.01</ixx> 
                    <iyy>0.01</iyy> 
                    <izz>0.01</izz>
                    <ixy>0</ixy> 
                    <ixz>0</ixz> 
                    <iyz>0</iyz>
                </inertia>
            </inertial>
            <visual name="visual">
                <geometry>
                    <mesh>
                        <uri>model://ConveyorBelt/meshes/ConveyorBelt_belt_surface.stl</uri>
                        <scale>0.001 0.001 0.001</scale>
                    </mesh>
                </geometry>
                <material>
                    <ambient>0.2 0.2 0.2 1</ambient>
                    <diffuse>0.2 0.2 0.2 1</diffuse>
                </material>
            </visual>
            <collision name="collision">
                <geometry>
                    <mesh>
                        <uri>model://ConveyorBelt/meshes/ConveyorBelt_belt_surface.stl</uri>
                        <scale>0.001 0.001 0.001</scale>
                    </mesh>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>50</mu>
                            <mu2>50</mu2>
                        </ode>
                    </friction>
                </surface>
            </collision>
        </link>

        <plugin name="ros2_conveyorbelt_plugin" filename="libROS2ConveyorBeltPlugin.so">
            <ros><namespace></namespace></ros>
            <max_velocity>1.0</max_velocity>
            <publish_rate>1000</publish_rate>
        </plugin>
        
    </model>
</sdf>