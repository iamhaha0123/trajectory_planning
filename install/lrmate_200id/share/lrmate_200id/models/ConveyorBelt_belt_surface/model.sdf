<?xml version="1.0" ?>
<sdf version="1.6">
    <model name="ConveyorBelt_belt_surface">
        <link name="belt_surface">
            <inertial>
                <mass>1.0</mass>
                <inertia>
                    <ixx>0.01</ixx> 
                    <iyy>0.01</iyy> 
                    <izz>0.01</izz>
                    <ixy>0</ixy> 
                    <ixz>0</ixz> 
                    <iyz>0</iyz>
                </inertia>
            </inertial>
            <visual name="visual">
                <geometry>
                    <mesh>
                    <uri>model://ConveyorBelt/meshes/ConveyorBelt.stl</uri>
                    <scale>0.001 0.001 0.001</scale>
                    </mesh>
                </geometry>
                <material>
                    <ambient>0.2 0.2 0.2 1</ambient>
                    <diffuse>0.2 0.2 0.2 1</diffuse>
                </material>
            </visual>

            <collision name="collision">
                <geometry>
                    <mesh>
                        <uri>model://ConveyorBelt/meshes/ConveyorBelt.stl</uri>
                        <scale>0.001 0.001 0.001</scale>
                    </mesh>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>50</mu>
                            <mu2>50</mu2>
                        </ode>
                    </friction>
                </surface>
            </collision>
        </link>

        <plugin name="conveyor_belt_plugin" filename="libgazebo_ros_conveyor_belt.so">
            <belt_link>belt_surface</belt_link>
            <velocity>0.2</velocity> <!-- m/s -->
        </plugin>
    </model>
</sdf>
